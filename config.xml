<?xml version="1.0" encoding="utf-8"?>
<widget id="com.example.mobile" version="1.0.0" xmlns:gap="http://phonegap.com/ns/1.0" xmlns="http://www.w3.org/ns/widgets">
  <name>Forgather</name>
  <description>
    Development version Forgather
  </description>
  <preference name="fullscreen" value="true"/>
  <icon src="/icons/android/icon-hdpi.png" gap:density="hdpi" gap:platform="android" />
  <icon src="/icons/android/icon-ldpi.png" gap:density="ldpi" gap:platform="android" />
  <icon src="/icons/android/icon-mdpi.png" gap:density="mdpi" gap:platform="android" />
  <icon src="/icons/android/icon-xhdpi.png" gap:density="xhdpi" gap:platform="android" />
  <icon src="/icons/android/icon-xxhdpi.png" gap:density="xxhdpi" gap:platform="android" />
  <splash src="/icons/android/splash-hdpi.png" gap:density="hdpi" gap:platform="android" />
  <splash src="/icons/android/splash-ldpi.png" gap:density="ldpi" gap:platform="android" />
  <splash src="/icons/android/splash-mdpi.png" gap:density="mdpi" gap:platform="android" />
  <splash src="/icons/android/splash-xhdpi.png" gap:density="xhdpi" gap:platform="android" />
  <author email="nicolanauwynck@hotmail.com">nicolanauwynck@hotmail.com</author>
  <access origin="*" />
  <preference name="phonegap-version" value="3.1.0" />
  <gap:plugin name="org.apache.cordova.network-information" />
  <gap:plugin name="com.phonegap.plugins.barcodescanner" />

  <feature name="Calendar">
    <param name="android-package" value="nl.xservices.plugins.Calendar" />
  </feature>
</widget>